module os_control_unit (
  instruction_from_bios,
  instruction_from_memory,
  instruction,
  os_control_unit_state
  );

  input [2:0] instruction_from_bios;
  input [2:0] instruction_from_memory;
  integer state = 0;
  output reg [2:0] instruction;
  output [3:0] os_control_unit_state;

  always @ ( * ) begin
    case (instruction_from_bios)
      3'b001: state <= 4'b0001;
      default: state <= state;
    endcase
    case (instruction_from_memory)
      3'b002: state <= instruction_from_memory;
      default: state <= state;
    endcase
    case (state)
      4'b0000: instruction <= instruction_from_bios;
      4'b0001: instruction <= instruction_from_memory;
      default: instruction <= instruction_from_memory;
    endcase
  end

  assign os_control_unit_state = state;

endmodule // os_control_unit
